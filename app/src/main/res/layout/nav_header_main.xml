<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/dimens_16"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_2"
            android:background="@android:color/transparent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dimens_100"
                android:layout_height="@dimen/dimens_100"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white" />
            <TextView
                android:id="@+id/textNavName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_108"
                android:layout_gravity="bottom"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </FrameLayout>
    </LinearLayout>
</layout>